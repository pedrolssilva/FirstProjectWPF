<Window
    x:Class="Wpf_firstApp.MainWindow"
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:Converters="clr-namespace:Wpf_firstApp"
    xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
    xmlns:local="clr-namespace:Wpf_firstApp"
    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
    Title="MainWindow"
    Width="525"
    Height="300"
    Background="#232732"
    mc:Ignorable="d">
    <Window.DataContext>
        <local:MainWindowViewMode />
    </Window.DataContext>
    <Window.Resources>
        <ResourceDictionary>
            <local:RadioButtonBooleanConverter x:Key="isCheckedOperation" />
        </ResourceDictionary>
    </Window.Resources>
    <Grid x:Name="inputs" Margin="4,0,4,0">
        <Grid.RowDefinitions>
            <RowDefinition Height="24" />
            <RowDefinition Height="24" />
            <RowDefinition Height="5" />
            <RowDefinition Height="24" />
            <RowDefinition Height="5" />
            <RowDefinition Height="24" />
            <RowDefinition Height="5" />
            <RowDefinition Height="20" />
            <RowDefinition Height="5" />
            <RowDefinition Height="150" />
        </Grid.RowDefinitions>
        <Grid
            x:Name="labelRow"
            Grid.Row="0"
            Margin="0,0,0,0"
            Background="#232732">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24*" />
                <ColumnDefinition Width="24*" />
            </Grid.ColumnDefinitions>
            <Label
                Grid.Column="0"
                Margin="10,0,20,0"
                HorizontalAlignment="Left"
                Content="Number 1:"
                Foreground="#BDB76B" />
            <Label
                Grid.Column="1"
                Margin="10,0,20,0"
                HorizontalAlignment="Left"
                Content="Number 2:"
                Foreground="#BDB76B" />
        </Grid>
        <Grid
            x:Name="inputRow"
            Grid.Row="1"
            Margin="0,0,0,0"
            Background="#232732">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24*" />
                <ColumnDefinition Width="24*" />
            </Grid.ColumnDefinitions>
            <TextBox
                x:Name="txtnumber1"
                Grid.Column="0"
                Width="250"
                Height="20"
                HorizontalAlignment="Left"
                BorderBrush="Black"
                Foreground="#8B4513"
                Text="{Binding Num1, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />

            <TextBox
                x:Name="txtnumber2"
                Grid.Column="1"
                Width="250"
                Height="20"
                HorizontalAlignment="Left"
                BorderBrush="Black"
                Foreground="#8B4513"
                Text="{Binding Num2, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
        </Grid>
        <Grid
            x:Name="ResultRow"
            Grid.Row="3"
            Margin="0,0,0,0"
            Background="#232732">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>
            <Label
                x:Name="lblResult"
                Grid.Column="0"
                HorizontalAlignment="Left"
                BorderBrush="Black"
                Content="Result:"
                Foreground="#BDB76B" />
            <TextBox
                x:Name="txtResult"
                Grid.Column="1"
                Width="250"
                Height="20"
                HorizontalAlignment="Left"
                BorderBrush="Black"
                IsEnabled="False"
                Text="{Binding Msg, Mode=TwoWay, UpdateSourceTrigger=LostFocus}" />
        </Grid>
        <Grid Grid.Row="5">
            <StackPanel HorizontalAlignment="Center" Orientation="Horizontal">
                <Label
                    Padding="0"
                    Content="Operation:"
                    Foreground="#BDB76B" />
                <RadioButton
                    x:Name="sum"
                    Foreground="#BDB76B"
                    GroupName="Operation"
                    IsChecked="{Binding CurrentOperation, Mode=TwoWay, ConverterParameter=Sum, Converter={StaticResource isCheckedOperation}, UpdateSourceTrigger=PropertyChanged}">
                    Sum
                </RadioButton>
                <RadioButton
                    x:Name="sub"
                    HorizontalAlignment="Center"
                    Foreground="#BDB76B"
                    GroupName="Operation"
                    IsChecked="{Binding CurrentOperation, Mode=TwoWay, ConverterParameter=Sub, Converter={StaticResource isCheckedOperation}, UpdateSourceTrigger=PropertyChanged}">
                    Sub
                </RadioButton>
                <RadioButton
                    x:Name="div"
                    HorizontalAlignment="Center"
                    Foreground="#BDB76B"
                    GroupName="Operation"
                    IsChecked="{Binding CurrentOperation, Mode=TwoWay, ConverterParameter=Div, Converter={StaticResource isCheckedOperation}, UpdateSourceTrigger=PropertyChanged}">
                    Div
                </RadioButton>
                <RadioButton
                    x:Name="mult"
                    HorizontalAlignment="Center"
                    Foreground="#BDB76B"
                    GroupName="Operation"
                    IsChecked="{Binding CurrentOperation, Mode=TwoWay, ConverterParameter=Mult, UpdateSourceTrigger=PropertyChanged}">
                    Mult
                </RadioButton>
            </StackPanel>
        </Grid>
        <Grid Grid.Row="7">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="5*" />
                <ColumnDefinition Width="24*" />
                <ColumnDefinition Width="5*" />
            </Grid.ColumnDefinitions>
            <Button
                Grid.Column="1"
                Background="#000000"
                Click="ButtonValidateInput"
                Command="{Binding calculateCommand, ConverterParameter=RadionButtonChecked}"
                Foreground="#BDB76B">
                Calcular
            </Button>
        </Grid>
        <Grid Grid.Row="9" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="24*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="24*" />
            </Grid.ColumnDefinitions>
            <ListView
                Name="Results"
                Grid.Column="1"
                HorizontalAlignment="Left"
                HorizontalContentAlignment="Left"
                ItemsSource="{Binding Results}">

                <ListView.View>
                    <GridView>
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Resultoutcome}"
                            Header="Previous results" />
                        <GridViewColumn
                            Width="100"
                            DisplayMemberBinding="{Binding Operation}"
                            Header="Operation" />
                    </GridView>
                </ListView.View>
            </ListView>
        </Grid>
    </Grid>
</Window>
